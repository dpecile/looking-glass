# Looking Glass Environment Variables
# Copy this file to .env and fill with your values

# reCAPTCHA v3 Keys (for invisible reCAPTCHA)
# Get your keys from: https://www.google.com/recaptcha/admin
RECAPTCHA_V3_SITE_KEY=your_v3_site_key_here
RECAPTCHA_V3_SECRET_KEY=your_v3_secret_key_here

# reCAPTCHA v2 Keys (fallback for low-score users)
# Get your keys from: https://www.google.com/recaptcha/admin
RECAPTCHA_V2_SITE_KEY=your_v2_site_key_here
RECAPTCHA_V2_SECRET_KEY=your_v2_secret_key_here

# Security Settings
RATE_LIMIT_PER_MINUTE=10
RATE_LIMIT_PER_HOUR=100

# CORS Allowed Origins (comma separated)
# Add all domains that will access your Looking Glass
CORS_ALLOWED_ORIGINS=https://lg.example.com,https://lg2.example.com
CORS_DEFAULT_ORIGIN=https://lg.example.com

# Logging
LOG_LEVEL=error